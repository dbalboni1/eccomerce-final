            <div id="item-container">
                <img class="prod-img" id="0" src="https://m.media-amazon.com/images/I/51NOqcVg9uL._AC_UY879_.jpg">
                <div id="prod-description">
                    <h2>Shirt be like:</h2>
                    <h3>blah blah blah blah</h3>
                    <h1 id="price">$5</h1>
                    <div id="prod-buttons-container">
                        <button id="prod-button">Add to Cart</button>
                        <button id="prod-button">Checkout</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>